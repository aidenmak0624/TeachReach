<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etTutorUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="text" />

        <EditText
            android:id="@+id/etTutorPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/etTutorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email (University Email)"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etTutorMajor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Major"
            android:inputType="text" />

        <Spinner
            android:id="@+id/spinnerCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnUploadTranscript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Transcript" />

        <TextView
            android:id="@+id/tvVerificationOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verification Status"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnTutorSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />
    </LinearLayout>
</ScrollView>
