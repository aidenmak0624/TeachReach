<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Sign up as a Tutor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTutorUsername"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Username"
            android:inputType="text" />

        <EditText
            android:id="@+id/etTutorPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/etTutorEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="University Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etTutorMajor"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Major"
            android:inputType="text" />

        <EditText
            android:id="@+id/etPronouns"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Pronouns (optional)"
            android:inputType="text" />

        <Button
            android:id="@+id/btnUploadTranscript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Upload Transcript"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvVerificationOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verification Status"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnTutorSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
