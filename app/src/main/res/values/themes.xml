<resources>

    <style name="Base.Theme.TeachReach" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/material_dynamic_primary70</item>
        <item name="colorSecondary">@color/material_dynamic_secondary70</item>
        <item name="colorSurface">@color/material_dynamic_secondary90</item>
        <item name="colorOnSurface">@color/material_dynamic_secondary30</item>
        <item name="colorPrimaryInverse">@color/material_dynamic_primary20
        </item>
        <item name="colorTertiary">@color/material_dynamic_tertiary90</item>
        <item name="colorOnTertiary">@color/material_dynamic_tertiary30</item>
        <item name="colorSurfaceVariant">
            @color/material_dynamic_neutral_variant90
        </item>
        <item name="colorSurfaceInverse">
            @color/material_dynamic_neutral_variant10
        </item>
        <item name="colorOnSurfaceInverse">@color/material_dynamic_primary70
        </item>
        <item name="colorOutline">@color/material_dynamic_neutral_variant10
        </item>
        <item name="colorOnSurfaceVariant">
            @color/material_dynamic_neutral_variant30
        </item>
        <item name="android:colorBackground">
            @color/material_dynamic_neutral_variant95
        </item>
        <item name="colorPrimaryContainer">@color/material_dynamic_primary95
        </item>
        <item name="colorOnPrimaryContainer">@color/material_dynamic_primary20
        </item>
        <item name="colorError">@color/design_default_color_error</item>

        <item name="colorSecondaryContainer">
            @color/material_dynamic_secondary80
        </item>
        <item name="colorOnSecondaryContainer">
            @color/material_dynamic_secondary20
        </item>
        <item name="colorTertiaryContainer">@color/material_dynamic_tertiary90
        </item>
        <item name="colorOnTertiaryContainer">
            @color/material_dynamic_tertiary20
        </item>

        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.App.MediumComponent
        </item>
        <item name="bottomNavigationStyle">
            @style/Widget.App.BottomNavigationView
        </item>
    </style>

    <style name="Theme.TeachReach" parent="Base.Theme.TeachReach" />


    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>


    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.App.TextInputLayout
        </item>
        <item name="shapeAppearance">
            @style/ShapeAppearance.Material3.MediumComponent
        </item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/material_dynamic_primary20</item>
        <item name="colorSecondary">@color/material_dynamic_primary80</item>

        <item name="textAppearanceTitleMedium">
            @style/TextAppearance.Material3.TitleMedium
        </item>
        <item name="textAppearanceBodySmall">
            @style/TextAppearance.Material3.TitleMedium
        </item>
        <item name="editTextStyle">
            @style/Widget.Material3.TextInputEditText.OutlinedBox.Dense
        </item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">
            @style/TextAppearance.Material3.TitleLarge
        </item>
        <item name="subtitleTextAppearance">
            @style/TextAppearance.Material3.TitleMedium
        </item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorSurface">@color/material_dynamic_secondary90</item>
        <item name="colorOnSurface">@color/material_dynamic_secondary30</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.App.BottomNavigationView
        </item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/material_dynamic_primary80</item>
        <item name="colorSurfaceContainer">@color/material_dynamic_secondary90
        </item>
        <item name="colorOnSurfaceVariant">@color/material_dynamic_secondary30
        </item>
    </style>
</resources>