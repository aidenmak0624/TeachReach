<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_tutor"
    app:startDestination="@id/tutorProfileSelfViewFragment">


    <fragment
        android:id="@+id/tutorProfileSelfViewFragment"
        android:name="comp3350.teachreach.presentation.profile.TutorProfileSelfViewFragment"
        android:label="fragment_tutor_profile_self_view"
        tools:layout="@layout/fragment_tutor_profile_self_view">
        <action
            android:id="@+id/actionToEditTutorProfileFragment"
            app:destination="@id/editTutorProfileFragment" />
        <action
            android:id="@+id/actionToTutorProfileSelfViewFragment"
            app:destination="@id/tutorProfileSelfViewFragment" />
        <action
            android:id="@+id/actionToAccountSettingsFragment"
            app:destination="@id/accountSettingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/editTutorProfileFragment"
        android:name="comp3350.teachreach.presentation.profile.EditTutorProfileFragment"
        android:label="fragment_edit_tutor_profile"
        tools:layout="@layout/fragment_edit_tutor_profile">
        <action
            android:id="@+id/actionToEditTutorProfileFragment"
            app:destination="@id/editTutorProfileFragment" />
        <action
            android:id="@+id/actionToTutorProfileSelfViewFragment"
            app:destination="@id/tutorProfileSelfViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountSettingsFragment"
        android:name="comp3350.teachreach.presentation.profile.AccountSettingsFragment"
        android:label="fragment_account_settings"
        tools:layout="@layout/fragment_account_settings">
        <action
            android:id="@+id/actionToTutorProfileSelfViewFragment"
            app:destination="@id/tutorProfileSelfViewFragment" />
        <action
            android:id="@+id/actionToAccountSettingsFragment"
            app:destination="@id/accountSettingsFragment" />
        <action
            android:id="@+id/actionToFragmentChangingEmail"
            app:destination="@id/fragmentChangingEmail" />
        <action
            android:id="@+id/actionToFragmentChangingPassword"
            app:destination="@id/fragmentChangingPassword" />
    </fragment>
    <fragment
        android:id="@+id/fragmentChangingEmail"
        android:name="comp3350.teachreach.presentation.profile.FragmentChangingEmail"
        android:label="fragment_change_email"
        tools:layout="@layout/fragment_change_email">
        <action
            android:id="@+id/actionToAccountSettingsFragment"
            app:destination="@id/accountSettingsFragment" />
        <action
            android:id="@+id/action_fragmentChangingEmail2_to_tutorProfileSelfViewFragment"
            app:destination="@id/tutorProfileSelfViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragmentChangingPassword"
        android:name="comp3350.teachreach.presentation.profile.FragmentChangingPassword"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password">
        <action
            android:id="@+id/actionToTutorProfileSelfViewFragment"
            app:destination="@id/tutorProfileSelfViewFragment" />
        <action
            android:id="@+id/actionToAccountSettingsFragment"
            app:destination="@id/accountSettingsFragment" />
    </fragment>
</navigation>